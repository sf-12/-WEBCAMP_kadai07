<div class='container'>
  <div class='row'>
    <!--サイドカラム-->
    <div class='col-md-3'>
      <%= render 'layouts/sidebar', user:current_user, book: @newbook %>
    </div>
    <!--メインカラム-->
    <div class='col-md-8 offset-md-1'>

      <!-- 書籍一覧テーブル -->
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <!-- テーブルタイトル -->
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <!-- テーブル中身 -->
          <tbody>
            <tr>
              <td>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>
