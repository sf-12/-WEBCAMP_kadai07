<div class='container'>
  <div class='row'>
    <!--サイドカラム-->
    <div class='col-md-3'>
      <%= render 'layouts/sidebar', user:current_user, book: @book %>
    </div>
    <!--メインカラム-->
    <div class='col-md-8 offset-md-1'>

      <!-- 書籍詳細テーブル -->
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(current_user) do %>
                <%= attachment_image_tag current_user, :profile_image, size:'40x40', fallback: "no_image.jpg" %>
                <br>
                <%= current_user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <%= link_to 'Edit', edit_book_path(@book), class:'btn btn-success btn-sm' %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book), method: :delete, class:'btn btn-danger btn-sm' %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


