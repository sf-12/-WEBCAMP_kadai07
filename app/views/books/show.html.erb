<div class='container'>
  <div class='row'>
    <!--サイドカラム-->
    <div class='col-md-3'>
      <%= render 'layouts/sidebar', user:current_user, book: @newbook %>
    </div>
    <!--メインカラム-->
    <div class='col-md-8 offset-md-1'>

      <!-- 書籍一覧テーブル -->
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>
        <!-- テーブル中身 -->
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, size:'40x40', fallback: "no_image.jpg" %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book) do %>
                  <%= @book.title %>
                <% end %>
                </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <%= link_to edit_book_path(@book) do %>
                  <div class='btn btn-success'>Edit</div>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book), method: :delete do %>
                  <div class='btn btn-danger'>Destroy</div>
                <% end %>
              </td>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>
