
<% if book.favorited_by?(current_user) %>

  <!-- current_userがいいねしている場合-->
  <%= link_to book_favorite_path(book.id, current_user.id), method: :delete do %>
    <i class="fas fa-heart"></i>
    <%= book.favorited_count %>
  <% end %>

<% else %>

  <!-- current_userがいいねしていない場合-->
  <%= link_to book_favorites_path(book.id), method: :post do %>
    <i class="far fa-heart"></i>
    <%= book.favorited_count %>
  <% end %>

<% end %>
