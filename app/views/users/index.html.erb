<div class='container'>
  <div class='row'>
    <!--サイドカラム-->
    <div class='col-md-3'>
      <%= render 'layouts/sidebar', user:current_user, book: @book %>
    </div>
    <!--メインカラム-->
    <div class='col-md-8 offset-md-1'>

      <!-- 書籍一覧テーブル -->
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <!-- テーブルタイトル -->
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan='3'></th>
          </tr>
        </thead>
        <!-- テーブル中身 -->
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, size:'40x40', fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to 'Show', user_path(user) %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>


